<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 이 파일의 경로 설정은 action-mybatis.xml에서 설정 -->	
<mapper namespace="mapper.gallery">
	<resultMap id="galleryVO" type="galleryVO">
		<result property="articleNO" column="articleNO"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="writeDate" column="writeDate"/>
		<result property="id" column="id"/>
	</resultMap>
	

		
	
	<select id="list" resultMap="galleryVO">
		<![CDATA[
			SELECT articleno, title, content, writeDate, id 
			from t_gallery 
			ORDER BY articleno DESC
		]]>
	</select>	
	
	
	<select id="getTotalCount" resultType="int" parameterType="Criteria">
		<![CDATA[
			select count(*) from t_gallery 
		]]>
		<trim prefix="where (" suffix=")" prefixOverrides="OR">
		<foreach item='type' collection="typeArr">
			<trim prefix="OR">
				<choose>
					<when test="type=='T'.toString()">
						title like '%'||#{keyword}||'%'
					</when>
					<when test="type=='C'.toString()">
						content like '%'||#{keyword}||'%'
					</when>
					<when test="type=='W'.toString()">
						id like '%'||#{keyword}||'%'
					</when>
				</choose>
			</trim>
		</foreach>
		</trim> 
	</select>	
	
	
	

